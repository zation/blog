---
pageable: false
---

<% page_articles.each do |article| %>
  <article class="article">
    <ul class="extro-info">
      <li class="date">
        <%= article.date.strftime('%h %d, %Y ') %>
      </li>
      <% article.tags.each do |tag, articles| %>
        <li class="tag">
          <a href="<%= tag_path tag %>"><%= tag %></a>
        </li>
      <% end %>
    </ul>
    <header class="article-title">
      <h1>
        <%= link_to article.title + " &#10143;", article %>
      </h1>
      <% if article.data.subtitle %>
        <h2>——<%= article.data.subtitle %></h2>
      <% end %>
    </header>
    <div class="article-content">
      <%= article.summary %>
    </div>
  </article>
<% end %>
